---
const { title, rating, category, image } = Astro.props;
import "../styles.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} Review | Fat Cat Buys</title>
    <link rel="stylesheet" href="/styles/review.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&family=Lora:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- HEADER -->
    <header class="site-header">
      <div class="site-header__inner container">
        <a class="brand" href="/">
          <div class="brand__mark"><img src="/fatcatlogo.png" alt="Fat Cat Buys Logo" /></div>
          <div class="brand__text"><span class="brand__name">Fat Cat Buys</span></div>
        </a>
        <h1 class="tagline"><i>Fat Cat Reviews</i></h1>
      </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="review container">
      <article class="review-post">
        <header class="review-header">
          {image && <img src={image} alt={title} class="review-image" />}
          <h1>{title}</h1>
          <p class="rating">⭐ {rating}/10</p>
          <p class="category">{category}</p>
        </header>

        <section class="content">
          <slot /> <!-- review body -->
        </section>
      </article>

      <!-- Verdict box -->
      <div class="verdict">
        <slot name="verdict" /> <!-- optional verdict section -->
      </div>
    </main>

    <!-- FOOTER -->
    <footer class="site-footer container">
      <p>© <span id="year"></span> Fat Cat Buys • 
        <span class="disclaimer">Not financial advice.</span>
        <a href="/disclaimer">Read full disclaimer</a>
      </p>
    </footer>
  </body>
</html>
